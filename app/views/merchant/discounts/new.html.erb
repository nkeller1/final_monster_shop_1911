<center>
<h1>Create New Discount</h1>

  <%= form_tag "/merchant/discounts", method: :post  do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :quantity_required %>
    <%= text_field_tag :quantity_required %>

    <%= label_tag :percentage %>
    <%= text_field_tag :percentage %>

    <%= submit_tag 'Create Discount' %>
  <% end %>
</center>
